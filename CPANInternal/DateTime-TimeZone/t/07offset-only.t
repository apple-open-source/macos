foreach ( @good_offsets ) {
    my $off = DateTime::TimeZone::OffsetOnly->new( offset => $_->[0] );
    is( $off->name, $_->[1], "name matches $_->[1]" );
}

foreach ( @bad_offsets ) {
    eval{ DateTime::TimeZone::OffsetOnly->new( offset => $_ ) };
    like( $@, qr/Invalid offset/, "$_ is invalid" );
}
