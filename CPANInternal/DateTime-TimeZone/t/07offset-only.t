    '1:111', '+1:111', '-1:111',
    ':1111', '+:1111', '-:1111',
    ':11:11', '+:11:11', '-:11:11',
    '1:11:1', '+1:11:1', '-1:11:1',
    '11:11:', '+11:11:', '-11:11:',
    '11111', '+11111', '-11111',
    '11111:', '+11111:', '-11111:',
