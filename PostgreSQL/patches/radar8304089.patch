+/*
+ * shm_open_robust
+ *
+ * Wrapper to call shm_open until it is not interrupted.
+ */
+static int
+shm_open_robust(const char *name, int flags, mode_t mode)
+{
+	int fd;
+	do
+	{
+		fd = shm_open(name, flags, mode);
+	} while (fd < 0 && errno == EINTR);
+	return fd;
+}
