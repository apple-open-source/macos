+/*
+ * close_robust
+ *
+ * Wrapper to call close until it is not interrupted.
+ */
+static int
+close_robust(int d)
+{
+	int result;
+	do
+	{
+		result = close(d);
+	} while (result == -1 && errno == EINTR);
+	return result;
+}
