uudecode checker.uu
rm -f checker.uu
if [ "`sum checker`" != "${CHECKER_SUM}" ]
then
	echo "$N: Program 'checker' extracted incorrectly!"
	cd ${OWD}
	rm -rf ${BKUP}
	exit 1
fi
chmod 700 checker

cat > patcher.uu <<\!EOF!
begin 777 patcher
M?T5,1@$! 0            (  P !    9(8$"#0   !<#P       #0 (  %
M "@ $0 0  8    T    -( $"     "@    H     4          P   -0 
M             !,         !          !    -    #2 ! @     ? T 
M 'P-   %     !    $   "P#0  L)T$"      @ 0  Y 0   <     $   
M @   & .  !@G@0(     '          !P         O=7-R+VQI8B]L:6)C
M+G-O+C$  !$    @    %     P    ;    &0   !X    :         !4 
