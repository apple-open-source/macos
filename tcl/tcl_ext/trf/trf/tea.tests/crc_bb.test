foreach {i in digest} {
    1 {hello world} B03CB7
} {
    if {[info tclversion] < 8.0} {
	test crc-4.$i-7.6 {crc, immediate} {
	    exec_md crc [text2hex $in]
	} $digest
    } else {
	test crc-4.$i-8.x {crc, immediate} {
	    hex -m e [crc $in]
	} $digest
    }
}


::tcltest::cleanupTests
