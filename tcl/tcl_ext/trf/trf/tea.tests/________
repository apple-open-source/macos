cd ../unix

foreach md {crc crc-zlib adler md5 sha haval ripemd128 ripemd160} {
    set fail [catch {
	exec ./tclsh ../tools/mdwrap -a $md -c digests.$md | sed -e {s/^/	/} >@ stdout
    } msg];#{}

    if {$fail} {puts "$md: $msg"}
}

cd ../tests


if {0} {
    cd ..

    foreach md {crc crc-zlib adler md5 sha haval ripemd128 ripemd160} {
	set fail [catch {
	    exec unix/tclsh tools/md -a $md -c digests.$md | sed -e {s/^/	/} >@ stdout
	} msg];#{}
	
	if {$fail} {puts "$md: $msg"}
    }

    cd tests
}

