#! /bin/sh

# Test to make sure recursive variable definitions die.
# From Jim Meyering.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AC_PROG_CC
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
man_MANS = chgrp.1
man_aux = $(man_MANS:.1=.x)
EXTRA_DIST = $(man_aux) $(man_MANS)
END

> chgrp.1
> chgrp.x

$ACLOCAL || exit 1
$AUTOMAKE
